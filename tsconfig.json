
{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["ESNext", "DOM"],
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "typeRoots": ["./node_modules/@types"],
    "types": ["node"]
  },
  "include": ["api/**/*", "src/**/*"],
  "exclude": ["node_modules"]
}
